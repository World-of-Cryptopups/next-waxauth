{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/typings",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
